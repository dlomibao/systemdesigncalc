{
  "manifest_version": 3,
  "name": "System Design Calculator",
  "description": "This extension allows you to perform system design estimation calculation easily",
  "version": "0.1.0",
  "action": {
    "default_icon": {
      "128": "assets/sysdesigncalc128.png",
      "48": "assets/sysdesigncalc48.png"
    },
    "default_popup": "index.html"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage",
    "webRequest",
    "contextMenus",
    "webNavigation",
    "clipboardWrite"
  ],
  "icons": {
    "128": "assets/sysdesigncalc128.png",
    "48": "assets/sysdesigncalc48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
      ]
    }
  ]
}
